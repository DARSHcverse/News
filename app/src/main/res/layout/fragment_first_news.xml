    <TextView
        android:layout_width="250dp"
        android:layout_height="147dp"
        android:layout_gravity="bottom|right"
        android:fontFamily="sans-serif"
        android:text="Wedding\n\nMelbourne man who murdered his daughter and son-in-law in cold blood because they didn't ask his permission to marry"
